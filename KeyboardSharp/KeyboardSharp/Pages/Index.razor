@page "/"
<TypeDisplay></TypeDisplay>
<hr />
<div class="row">
    <div class="col-sm-10">
        <USKeyboard KeyFilter="CurrentKeyFilter"></USKeyboard>
    </div>
    <div class="col-sm-2">
        <input type="checkbox" @onchange="CheckChanged" />
    </div>
</div>
<div class="row">
    <div class="col-sm-3"><img class="keyboard-hand" src="images/hand_l.png" /></div>
    <div class="col-sm-3"><img class="keyboard-hand" src="images/hand_r.png" /></div>
</div>
@code 
{
    private IKeyFilter CurrentKeyFilter;
    private IKeyFilter KeyFilterWithLabels = new KeyFilter(fingerLabels: new string[] { "1", "2", "3", "4", "5" });
    private bool ShowLabels = false;

    private void CheckChanged()
    {
        ShowLabels = !ShowLabels;

        if (ShowLabels)
            CurrentKeyFilter = KeyFilterWithLabels;
        else
            CurrentKeyFilter = KeyFilter.Default;

        StateHasChanged();
    }

    protected override void OnInitialized()
    {
        CurrentKeyFilter = KeyFilter.Default;

        base.OnInitialized();
    }
}